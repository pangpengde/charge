<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="5dip"
    android:paddingTop="10dip" >

    <ImageView
        android:id="@+id/general__web_pull_refresh_view__icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:visibility="invisible"
        android:src="@drawable/general__shared__refreshing" />

    <FrameLayout
        android:layout_marginTop="5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/general__web_pull_refresh_view__pull_down_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="下拉刷新"
            android:textColor="#99999980"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/general__web_pull_refresh_view__release_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="释放刷新"
            android:textColor="#99999980"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/general__web_pull_refresh_view__refreshing_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="刷新中, 请稍后..."
            android:textColor="#99999980"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/general__web_pull_refresh_view__refreshed_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="刷新成功"
            android:textColor="#99999980"
            android:textSize="10sp"
            android:visibility="invisible" />
    </FrameLayout>

</LinearLayout>